{
  "name": "@dragonereum/subgraph",
  "description": "Subgraph for Dragonereum blockchain game",
  "version": "1.0.0",
  "license": "WTFPL",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dragonereum/dragonereum-subgraph.git"
  },
  "bugs": {
    "url": "https://github.com/dragonereum/dragonereum-subgraph/issues"
  },
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "deploy": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ dragonereum/dragonereum-matic",
    "create-local": "graph create --node http://localhost:8020/ dragonereum/dragonereum-matic",
    "remove-local": "graph remove --node http://localhost:8020/ dragonereum/dragonereum-matic",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 dragonereum/dragonereum-matic"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.18.0",
    "@graphprotocol/graph-ts": "0.18.1"
  },
  "devDependencies": {
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2"
  }
}
